<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns:jaxws="http://cxf.apache.org/jaxws"
	xmlns:jaxrs="http://cxf.apache.org/jaxrs"
	xsi:schemaLocation="
http://www.springframework.org/schema/beans
http://www.springframework.org/schema/beans/spring-beans-4.2.xsd
http://cxf.apache.org/jaxws 
http://cxf.apache.org/schemas/jaxws.xsd
http://cxf.apache.org/jaxrs
http://cxf.apache.org/schemas/jaxrs.xsd">

	<jaxrs:server id="department" address="/department">
		<jaxrs:serviceBeans>
			<ref bean="departmentService" />
		</jaxrs:serviceBeans>
		<jaxrs:extensionMappings>
			<entry key="json" value="application/json" />
			<entry key="xml" value="application/xml" />
		</jaxrs:extensionMappings>
		<jaxrs:languageMappings>
			<entry key="en" value="en-gb" />
		</jaxrs:languageMappings>
		<jaxrs:providers>
			<ref bean='jaxrsProvider' />
		</jaxrs:providers>
	</jaxrs:server>

	<jaxrs:server id="vehicle" address="/vehicle">
		<jaxrs:serviceBeans>
			<ref bean="vehicleService" />
		</jaxrs:serviceBeans>
		<jaxrs:extensionMappings>
			<entry key="json" value="application/json" />
			<entry key="xml" value="application/xml" />
		</jaxrs:extensionMappings>
		<jaxrs:languageMappings>
			<entry key="en" value="en-gb" />
		</jaxrs:languageMappings>
		<jaxrs:providers>
			<ref bean='jaxrsProvider' />
		</jaxrs:providers>
	</jaxrs:server>

	<jaxrs:server id="admin" address="/admin">
		<jaxrs:serviceBeans>
			<ref bean="adminService" />
		</jaxrs:serviceBeans>
		<jaxrs:extensionMappings>
			<entry key="json" value="application/json" />
			<entry key="xml" value="application/xml" />
		</jaxrs:extensionMappings>
		<jaxrs:languageMappings>
			<entry key="en" value="en-gb" />
		</jaxrs:languageMappings>
		<jaxrs:providers>
			<ref bean='jaxrsProvider' />
		</jaxrs:providers>
	</jaxrs:server>

	<bean id='jaxrsProvider' class='com.fasterxml.jackson.jaxrs.json.JacksonJsonProvider' />


	<bean id="departmentService" class="baic.base.service.DepartmentService" />
	<bean id="vehicleService" class="baic.base.service.VehicleService" />
	<bean id="adminService" class="baic.base.service.AdminService" />


</beans>