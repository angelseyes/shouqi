<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns:jaxws="http://cxf.apache.org/jaxws"
	xmlns:jaxrs="http://cxf.apache.org/jaxrs"
	xsi:schemaLocation="
http://www.springframework.org/schema/beans
http://www.springframework.org/schema/beans/spring-beans-4.2.xsd
http://cxf.apache.org/jaxws 
http://cxf.apache.org/schemas/jaxws.xsd
http://cxf.apache.org/jaxrs
http://cxf.apache.org/schemas/jaxrs.xsd">

	<jaxrs:server id="latest" address="/latestRecord">
		<jaxrs:serviceBeans>
			<ref bean="lastestRecordService" />
		</jaxrs:serviceBeans>
		<jaxrs:extensionMappings>
			<entry key="json" value="application/json" />
			<entry key="xml" value="application/xml" />
		</jaxrs:extensionMappings>
		<jaxrs:languageMappings>
			<entry key="en" value="en-gb" />
		</jaxrs:languageMappings>
		<jaxrs:providers>
			<ref bean='jaxrsProvider' />
		</jaxrs:providers>
	</jaxrs:server>

	<jaxrs:server id="trace" address="/trace">
		<jaxrs:serviceBeans>
			<ref bean="traceService" />
		</jaxrs:serviceBeans>
		<jaxrs:extensionMappings>
			<entry key="json" value="application/json" />
			<entry key="xml" value="application/xml" />
		</jaxrs:extensionMappings>
		<jaxrs:languageMappings>
			<entry key="en" value="en-gb" />
		</jaxrs:languageMappings>
		<jaxrs:providers>
			<ref bean='jaxrsProvider' />
		</jaxrs:providers>
	</jaxrs:server>

	<bean id='jaxrsProvider' class='com.fasterxml.jackson.jaxrs.json.JacksonJsonProvider' />

	<bean id="lastestRecordService" class="baic.obd.service.LatestRecordService" />
	<bean id="traceService" class="baic.obd.service.TraceService" />

</beans>